services:
  app:
    build:
      context: .                           # <-- project root
      dockerfile: docker/php/Dockerfile
      args:
        APP_ENV: production
    depends_on:
      - mysql
    ports:
      - "9000:9000"

  nginx:
    image: nginx:alpine
    volumes:
      - ./docker/nginx/default.conf:/etc/nginx/conf.d/default.conf:ro
      - ./docker/certbot/etc:/etc/letsencrypt:ro
      - ./docker/certbot/lib:/var/lib/letsencrypt:rw
      - ./docker/certbot/www:/var/www/certbot:ro
    depends_on:
      - app
    ports:
      - "80:80"
      - "443:443"

  mysql:
    image: mysql:5.7
    environment:
      MYSQL_DATABASE: laravel
      MYSQL_ROOT_PASSWORD: secret
    ports:
      - "33060:3306"
    volumes:
      - dbdata:/var/lib/mysql

  certbot:
    image: certbot/certbot
    volumes:
      - ./docker/certbot/etc:/etc/letsencrypt
      - ./docker/certbot/lib:/var/lib/letsencrypt
      - ./docker/certbot/www:/var/www/certbot
    entrypoint: >
      sh -c "trap exit TERM; while :; do sleep 6h & wait $${!}; certbot renew; done"

  phpmyadmin:
    image: phpmyadmin/phpmyadmin:latest
    container_name: flir-monitor-phpmyadmin
    depends_on:
      - mysql
    environment:
      PMA_HOST: mysql
      PMA_USER: root
      PMA_PASSWORD: secret
      PMA_PORT: 3306
    ports:
      - "8081:80"
    restart: always

volumes:
  dbdata:
